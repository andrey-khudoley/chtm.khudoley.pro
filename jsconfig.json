{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2021", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"],
      "@andrey-khudoley/*": ["./*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "jsx.Fragment",
    "strict": false,
    "noUncheckedIndexedAccess": false
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./templates/neso-db-assistent/web/v1/types/vue.d.ts",
    "target": 3,
    "strictTemplates": false,
    "skipTemplateCodegen": false,
    "nativeTags": ["template", "script", "style"]
  },
  "include": [
    "**/*", ".**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ],
  "files": [
    "./node_modules/@app/types/globals.d.ts",
    "./node_modules/@app/types/modules.d.ts",
    "./node_modules/@app/ui/global-jsx.d.ts",
    "./templates/neso-db-assistent/web/v1/types/vue.d.ts"
  ]
}
